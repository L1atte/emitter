{
	"include": ["src/*"],
	"exclude": ["node_modules", "lib"],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "ESNext"],
		"module": "ES6",
		"moduleResolution": "node",
		"noErrorTruncation": true,
		"declaration": true,
		"declarationDir": "lib/types",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
